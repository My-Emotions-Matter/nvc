import &ArtSuite
{DataNodes} = &Data

emojiMap =
  needs: "🌳"
  negEmotions: "☹️"
  posEmotions: "😀"
  selected: "💡"

subtextMap =
  needs:        "needs"
  negEmotions:  "emotions"
  posEmotions:  "emotions"
  living:       "animal"
  thriving:     "mamal"
  transcending: "human"
  selected:     "my selection"

class CategoryButton2 extends FluxComponent
  @subscriptions
    status: (props) -> props.category

  doAction: ->
    @props.action? @props.category

  render: ->
    {category, selected} = @props
    &Button
      selected: selected
      emoji:    emojiMap[category]
      text:     category
      subtext:  subtextMap[category]
      action:   @doAction
      color:
        if DataNodes[category].rootKey == "needs"
          if @status != 3
            @models.status.colors[@status]
