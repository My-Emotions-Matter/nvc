      childrenLayout:           :row
      clip:                     true
      size:                     ww: 1   hch:  1
      animators: size: toFrom:  ww: 1   h:    0

      array key, i from @keyPath
        []
          CategoryButton key: key

          if dataNodes[key].childKeys
            TextElement
              align:      :centerCenter
              size:       hh: 1 wcw:1
              text:       :‚ü©
              fontSize:   28
              layoutMode: :tight
              color:      #bbb
